{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "semi": "off",
        "no-cond-assign": "error",
        "curly": ["error", "multi"],
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true
        }],
        "keyword-spacing": ["error", {
            "after": false,
            "overrides": {
                "else": {
                    "after": true
                }
            }
        }]
    }
}